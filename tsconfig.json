{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/pages/*": ["pages/*"],
      "@/components": ["components"],
      "@/features": ["features"],
      "@/assets": ["assets"],
      "@/assets/*": ["assets/*"],
      "@/config": ["config"],
      "@/hooks": ["hooks"],
      "@/providers": ["providers"],
      "@/libs": ["libs"],
      "@/mock": ["mock"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
