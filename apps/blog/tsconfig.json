{
  "extends": "@packages/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/pages/*": ["pages/*"],
      "@/components": ["components"],
      "@/features": ["features"],
      "@/features/*": ["features/*"],
      "@/layouts": ["layouts"],
      "@/theme": ["theme"],
      "@/config": ["config"],
      "@/hooks": ["hooks"],
      "@/providers": ["providers"],
      "@/libs": ["libs"],
      "@/graphql/*": ["graphql/*"],
      "@/mock/*": ["../__tests__/mock/*"]
    },
    "typeRoots": ["types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
